        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.yang.gesturepassword.GestureDemeActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.yang.gesturepassword.SetGesturePasswordActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.yang.gesturepassword.GesturePasswordActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.yang.gesturepassword.TestActivity"
            android:screenOrientation="portrait" />
    </application>

</manifest>